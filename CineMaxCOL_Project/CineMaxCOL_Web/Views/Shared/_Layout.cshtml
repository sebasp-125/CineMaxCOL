<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CineMaxColWeb</title>
    <link rel="stylesheet" href="~/css/output.css" />
</head>

<body class="flex flex-col min-h-screen">

    <header class="sticky top-0 z-20 w-full">
        <div class="navbar bg-white shadow-md border-b-2 border-[#55692d]">
            <div class="drawer">
                <input id="menu-drawer" type="checkbox" class="drawer-toggle" />
                <div class="drawer-content flex items-center">
                    <label for="menu-drawer" class="btn btn-ghost btn-circle text-[#55692d]">
                        <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M3 5h14a1 1 0 110 2H3a1 1 0 110-2zm0 4h14a1 1 0 110 2H3a1 1 0 110-2zm0 4h14a1 1 0 110 2H3a1 1 0 110-2z"
    using CineMaxCOL_Web.Controllers;
                                clip-rule="evenodd" />
                        </svg>
                    </label>
                </div>
                <div class="drawer-side z-30">
                    <label for="menu-drawer" class="drawer-overlay"></label>
                    <ul class="menu p-4 w-64 min-h-full bg-gradient-to-b from-[#55692d] to-[#cad395] text-white">
                        <li><a href="#">Inicio</a></li>
                        <li><a href="#">Películas</a></li>
                        <li><a href="@Url.Action("Index" , "Food")">Comidas</a></li>
                        <li><a href="#">Mi Perfil</a></li>
                        <li><a href="@Url.Action("LogIn" , "Account")">Iniciar Sesion</a></li>
                        <li><a href="@Url.Action("Register", "Account")">Registrase</a></li>
                        <li><a href="@Url.Action("LogOut" , "Account")">Cerrar sesión</a></li>
                    </ul>
                </div>
            </div>

            <!-- Logo y Título -->
            <div class="flex-1 flex items-center space-x-3 ml-4">
                <a class="text-black font-bold text-lg">CINEMAXCOL</a>
                <div class="hidden md:flex space-x-6 ml-10">
                    <a class="text-[#55692d] font-semibold">Cartelera</a>
                    <a class="text-[#55692d] font-semibold">Salas</a>
                    <a class="text-[#55692d] font-semibold">Comida</a>
                </div>
            </div>

            <div class="flex-none mr-4">
                <img src="https://img.daisyui.com/images/stock/photo-1534528741775-53994a69daeb.webp"
                    alt="Perfil" class="w-10 h-10 rounded-full cursor-pointer" />
            </div>
        </div>
    </header>

    <!-- Main content -->
    <main class="flex-1 p-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-[#55692d] text-white p-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <!-- Información Legal -->
            <div class="flex flex-col items-center">
                <h2 class="font-bold">INFORMACIÓN LEGAL</h2>
                <h2 class="mt-6 font-bold">COMUNÍCATE</h2>
                <p>soporte.cmc@gmail.com</p>
                <p>300-949-2323</p>
            </div>

            <!-- Contacto y Nosotros -->
            <div class="md:col-span-2 flex flex-col justify-center items-center">
                <div class="grid grid-cols-2 w-full text-center">
                    <div class="p-2">CONTACTANOS (PQRS)</div>
                    <div class="p-2">NOSOTROS (LOGO)</div>
                </div>
                <div class="mt-6">
                    <p>© 2025 CINEMAXCOL</p>
                </div>
            </div>

            <!-- Redes Sociales -->
            <div class="flex flex-col items-center">
                <h2 class="mb-4 font-bold">SÍGUENOS EN:</h2>
                <div class="flex space-x-4">
                    <!-- Facebook -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="white" viewBox="0 0 24 24">
                        <path
                            d="M22 12c0-5.522-4.478-10-10-10S2 6.478 2 12c0 5 3.657 9.127 8.438 9.878v-6.988H7.898v-2.89h2.54V9.845c0-2.507 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.242 0-1.63.771-1.63 1.562v1.875h2.773l-.443 2.89h-2.33v6.988C18.343 21.127 22 17 22 12z" />
                    </svg>
                    <!-- Twitter -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="white" viewBox="0 0 24 24">
                        <path
                            d="M19.633 7.997c.013.18.013.36.013.54 0 5.505-4.19 11.85-11.85 11.85-2.36 0-4.553-.69-6.398-1.872.327.038.654.05.994.05 1.96 0 3.764-.654 5.2-1.767a4.179 4.179 0 01-3.901-2.898c.256.038.513.064.782.064.373 0 .747-.05 1.094-.144a4.173 4.173 0 01-3.346-4.097v-.05a4.23 4.23 0 001.882.522A4.172 4.172 0 014.498 6.1a11.825 11.825 0 008.588 4.35 4.706 4.706 0 01-.103-.954 4.172 4.172 0 017.216-2.845 8.225 8.225 0 002.654-1.01 4.178 4.178 0 01-1.832 2.31 8.293 8.293 0 002.404-.654 8.892 8.892 0 01-2.104 2.184z" />
                    </svg>
                    <!-- Instagram -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="white" viewBox="0 0 24 24">
                        <path
                            d="M7 2C4.243 2 2 4.243 2 7v10c0 2.757 2.243 5 5 5h10c2.757 0 5-2.243 5-5V7c0-2.757-2.243-5-5-5H7zm10 2c.552 0 1 .448 1 1v2c0 .552-.448 1-1 1h-2c-.552 0-1-.448-1-1V5c0-.552.448-1 1-1h2zM12 7c2.757 0 5 2.243 5 5s-2.243 5-5 5a5 5 0 110-10zm0 2a3 3 0 100 6 3 3 0 000-6z" />
                    </svg>
                    <!-- TikTok -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="white" viewBox="0 0 24 24">
                        <path
                            d="M9 3h6v2h-4v12a4 4 0 11-4-4h2a2 2 0 102 2V3z" />
                    </svg>
                </div>
                <button class="mt-4 bg-[#808000] hover:bg-[#cbcb05] text-black font-semibold py-2 px-4 rounded-full">
                    PREGUNTAS
                </button>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@if (TempData["success"] != null)
{
    <div class="toast toast-top toast-end z-50">
        <div class="alert alert-success">
            <span>@TempData["success"]</span>
        </div>
    </div>

    <script>
        setTimeout(() => {
            document.querySelector('.toast')?.remove();
        }, 4000);
    </script>
}

@if (TempData["error"] != null)
{
    <div class="toast toast-top toast-end z-50">
        <div class="alert alert-error">
            <span>@TempData["error"]</span>
        </div>
    </div>

    <script>
        setTimeout(() => {
            document.querySelector('.toast')?.remove();
        }, 4000);
    </script>
}

