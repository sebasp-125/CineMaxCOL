

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<!-- Header del Login -->
<div class="bg-[#55692d] text-white p-6 text-center rounded-t-lg">
    <h1 class="text-3xl font-bold">¡Bienvenido de Nuevo!</h1>
    <p class="text-lg mt-2">Ingresa tus datos para acceder a tu cuenta.</p>
</div>

<!-- Formulario de Login -->
<form asp-action="ProccesLogIn" asp-controller="Account" method="post" class="space-y-6 p-6 max-w-md mx-auto bg-white rounded-lg shadow-lg mt-4">
    <!-- Email -->
    <div class="form-control">
        <label for="email" class="label text-gray-700">Correo Electrónico</label>
        <input type="email" id="email" name="email" class="input input-bordered w-full border-gray-400 text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-[#55692d]" placeholder="correo@ejemplo.com">
    </div>

    <!-- Password -->
    <div class="form-control">
        <label for="password" class="label text-gray-700">Contraseña</label>
        <input type="password" id="password" name="password" class="input input-bordered w-full border-gray-400 text-gray-700 placeholder-gray-500 focus:ring-2 focus:ring-[#55692d]" placeholder="********">
    </div>

    <!-- Recordarme -->
    <div class="form-control flex flex-row items-center gap-2">
        <input type="checkbox" id="remember" name="remember" class="checkbox" style="accent-color: #55692d;">
        <label for="remember" class="label text-gray-700">Recordarme</label>
    </div>

    <!-- Botón de Ingresar -->
    <div class="form-control">
        <button type="submit" class="btn w-full text-white" style="background-color: #55692d;">Iniciar Sesión</button>
    </div>

    <!-- Opción de registrarse -->
    <div class="text-center mt-4">
        <p class="text-gray-600">¿No tienes una cuenta? 
            <a href="/Account/Register" class="text-[#55692d] font-semibold hover:underline">Regístrate</a>
        </p>
    </div>
</form>
