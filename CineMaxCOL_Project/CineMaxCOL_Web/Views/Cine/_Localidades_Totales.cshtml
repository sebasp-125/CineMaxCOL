@model CineMaxCOL_Web.Models.Cine.CineCompletoViewModel



<input type="checkbox" id="Agregar_Nueva_Localidad" class="modal-toggle" />
    <div class="modal" role="dialog">
        <div class="bg-white flex flex-col justify-center items-center w-120 h-100 overflow-hidden overflow-y-auto text-black rounded-xl">
            @*cambiar direccionamiento del controlador*@
            <form action="@Url.Action("Agregar","Cine")" method="post" enctype="multipart/form-data" class="flex flex-col gap-2 justify-center items-center p-5">
                <input type="hidden" name="Ubicacion_s.Id" value="0">
                <input type="hidden" name="tipo" value="Localidad">

                <label class="font-bold mt-4">Nombre de la Localidad</label>
                <input type="text" name="Ubicacion_s.Localidad" class="text-center rounded-xl bg-gray-300 p-1">
                
                <label class="font-bold mt-4">Ubicacion de la localidad</label>
                <select name="Ubicacion_s.IdMunicipio">
                    @foreach (var municipios in Model.Municipios_Lista)
                    {
                        <option value="@municipios.Id">
                            @municipios.NombreMunicipio
                        </option>
                    }
                </select>

                <label class="font-bold mt-4">Direccion de la Localidad</label>
                <input type="text" name="Ubicacion_s.Direccion" class="text-center rounded-xl bg-gray-300 p-1">
                
                <button type="submit" class="text-sm bg-[#55692d] text-white rounded-xl w-24 p-1 text-center">Agregar</button>
            </form>
             <label for="Agregar_Nueva_Localidad" class="btn border-none bg-[#808000] text-white">Cancelar</label>
        </div>
    </div>



<h1 class="w-full font-bold text-xl text-[#55692d] text-center">LOCALIDADES</h1>
<label for="Agregar_Nueva_Localidad" class="btn ml-4 bg-[#55692d] text-white rounded-xl">Agregar Nueva Localidad</label>
<div class="ml-4 bg-gray-200 h-260 overflow-y-auto p-4 flex flex-wrap justify-center items-center gap-x-18">
    @foreach(var municipio in Model.Municipios_Lista)
    {
        @foreach(var localidad in municipio.Ubicacions)
        {
            <div class="bg-white ml-4 bg-white p-2 gap-2 w-40 h-46 rounded-xl flex flex-col justify-center items-center">
                <h1 class="text-xl font-bold text-[#55692d]">@localidad.Localidad</h1>
                <h1 class="text-xs font-bold">@localidad.Direccion</h1>
                <h1 class="text-xs font-bold">@localidad.IdMunicipioNavigation?.NombreMunicipio</h1>
                <label for="Actualizar_Localidad_@localidad.Id" class="text-sm bg-[#55692d] text-white rounded-xl w-24 p-1 text-center">Ver MÃ¡s</label>
                <a href="@Url.Action("Eliminar", "Cine", new { id = @localidad.Id, tipo = "Localidad" })" class="text-sm bg-red-700 text-white rounded-xl w-24 p-1 text-center">Eliminar</a>
            </div>

            <input type="checkbox" id="Actualizar_Localidad_@localidad.Id" class="modal-toggle" />
            <div class="modal" role="dialog">
                <div class="bg-white w-120 h-100 flex flex-col justify-center items-center gap-2 overflow-hidden overflow-y-auto text-black rounded-xl">
                    @*cambiar direccionamiento del controlador*@
                    <form action="@Url.Action("Agregar","Cine")" method="post" enctype="multipart/form-data" class="flex flex-col justify-center gap-2 items-center p-5">
                        <input type="hidden" name="Ubicacion_s.Id" value="@localidad.Id">
                        <input type="hidden" name="tipo" value="Localidad">

                        <label class="font-bold mt-4">Nombre de la Localidad</label>
                        <input type="text" class="bg-gray-300 rounded-xl p-1 text-center" name="Ubicacion_s.Localidad" value="@localidad.Localidad">

                        <label class="font-bold mt-4">Direccion</label>
                        <input type="text" class="bg-gray-300 rounded-xl p-1 text-center" name="Ubicacion_s.Direccion" value="@localidad.Direccion">

                        <select name="Ubicacion_s.IdMunicipio">
                            @foreach (var municipios in Model.Municipios_Lista)
                            {
                                <option value="@municipios.Id" selected="@(localidad?.IdMunicipioNavigation?.Id == municipios.Id)">
                                @municipios.NombreMunicipio
                                </option>
                            }
                        </select>
                        <button type="submit" class="text-sm bg-[#55692d] text-white rounded-xl w-24 p-1 text-center">Agregar</button>
                    </form>
                    <div class="modal-action">
                        <label for="Actualizar_Localidad_@localidad.Id" class="btn border-none bg-[#808000] text-white">Cancelar</label>
                </div>
                </div>
                
            </div>
        }
    }    
</div>