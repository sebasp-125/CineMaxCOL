@model CineMaxCOL_Web.Models.Cine.CineCompletoViewModel



<input type="checkbox" id="Agregar_Nuevo_Municipio" class="modal-toggle" />
    <div class="modal" role="dialog">
        <div class="bg-white w-120 h-60 flex flex-col gap-2 justify-center items-center overflow-hidden overflow-y-auto text-black rounded-xl">
            @*cambiar direccionamiento del controlador*@
            <form action="@Url.Action("Agregar","Cine")" method="post" enctype="multipart/form-data" class="flex flex-col gap-2 justify-center items-center p-5">
                <input type="hidden" name="Municipio_s.Id" value="0">
                <input type="hidden" name="tipo" value="Municipio">

                <label class="font-bold mt-4">Nombre del Municipio</label>
                <input type="text" name="Municipio_s.NombreMunicipio" class="text-center rounded-xl bg-gray-300 p-1" placeholder="Nombre municipio">

                <button type="submit" class="text-sm bg-[#55692d] text-white rounded-xl w-24 p-1 text-center">Agregar</button>
            </form>
            <label for="Agregar_Nuevo_Municipio" class="btn border-none bg-[#808000] text-white">Cancelar</label>
        </div>
    </div>

<h1 class="w-full font-bold text-xl text-[#55692d] text-center">MUNICIPIOS</h1>
<label for="Agregar_Nuevo_Municipio" class="btn ml-4 bg-[#55692d] text-white rounded-xl">Agregar Nuevo Municipio</label>
<div class="bg-gray-200 h-260 overflow-y-auto p-4 flex flex-wrap justify-center items-center gap-x-18">
    @foreach(var municipio in Model.Municipios_Lista)
    {
    
            <div class="bg-white ml-4 bg-white gap-2 w-40 h-40 rounded-xl flex flex-col justify-center items-center">
                <h1 class="text-xl font-bold text-[#55692d]">@municipio.NombreMunicipio</h1>
                <h1 class="text-xs font-bold">Numero Localidades: @municipio.Ubicacions?.Sum(u => u.Cines.Count)</h1>
                <label for="Actualizar_Municipio_@municipio.Id" class="text-sm bg-[#55692d] text-white rounded-xl w-24 p-1 text-center">Ver MÃ¡s</label>
                <a href="@Url.Action("Eliminar", "Cine", new { id = @municipio.Id, tipo = "Municipio" })" class="text-sm bg-red-700 text-white rounded-xl w-24 p-1 text-center">Eliminar</a>
            </div>
        
        

            <input type="checkbox" id="Actualizar_Municipio_@municipio.Id" class="modal-toggle" />
                <div class="modal" role="dialog">
                    <div class="bg-white w-120 h-70 flex flex-col justify-center items-center gap-2 overflow-hidden overflow-y-auto text-black rounded-xl">
                        @*cambiar direccionamiento del controlador*@
                        <form action="@Url.Action("Agregar","Cine")" method="post" enctype="multipart/form-data" class="flex flex-col justify-center items-center p-5">
                            <input type="hidden" name="Municipio_s.Id" value="@municipio.Id">
                            <input type="hidden" name="tipo" value="Municipio">

                            <label class="font-bold mt-4">Nombre localidad</label>
                            <input type="text" class="bg-gray-300 rounded-xl p-1 text-center" name="Municipio_s.NombreMunicipio" value="@municipio.NombreMunicipio">
                            <ul>
                                @foreach (var ubicacion in municipio.Ubicacions)
                                {
                                    <li>Localidad: @ubicacion.Localidad - Cines: @ubicacion.Cines.Count</li>
                                }
                            </ul>

                            <button type="submit" class="text-sm bg-[#55692d] text-white rounded-xl w-24 p-1 text-center mt-8">Agregar</button>
                        </form>
                        <div class="modal-action">
                        <label for="Actualizar_Municipio_@municipio.Id" class="btn border-none bg-[#808000] text-white">Cancelar</label>
                    </div>
                    </div>
                </div>
        
    }    
</div>